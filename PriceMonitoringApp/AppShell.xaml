<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PriceMonitoringApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PriceMonitoringApp"
    xmlns:views="clr-namespace:PriceMonitoringApp.Views"
    Title="PriceMonitoringApp"
    Shell.TabBarBackgroundColor="DarkCyan"
    Shell.TabBarForegroundColor="Aquamarine"
    Shell.TabBarTitleColor="Aquamarine"
    Shell.TabBarUnselectedColor="White">


    <TabBar>
        <ShellContent
                Title="Home"
                Icon="home.png"
                ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent 
            Title="Settings"
              Icon="settings.png"
             ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>


</Shell>
